<Window x:Class="NewCloud.Desktop.Showcase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="New Cloud" Height="350" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="CustomerButton" Content="Покупатели сервисов" Margin="0,30,0,0"
                    Click="CustomerButton_Click" FontSize="16" />
            <Button x:Name="ProducerButton" Content="Поставщики сервисов" Margin="0,30,0,0"
                    Click="ProducerButton_Click" FontSize="16" />
            <Button x:Name="ExitButton" Content="Выход" Margin="0,30,0,0" Click="ExitButton_Click" FontSize="16" />
        </StackPanel>
        <Label x:Name="WindowsNameLabel" Content="Главное Меню" Margin="0,15,0,0" FontSize="16"
               HorizontalAlignment="Center" VerticalAlignment="Top" />
    </Grid>
</Window>